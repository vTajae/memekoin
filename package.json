{
  "scripts": {
    "build:css": "tailwindcss -i ./style/tailwind.css -o ./target/site/pkg/koin.css --minify",
    "build:wasm": "cargo build --lib --target wasm32-unknown-unknown --features hydrate --release",
    "build:server": "cargo build --bin koin --features ssr --release",
    "build": "npm run build:css && npm run build:wasm && npm run build:server",
    "dev": "cargo leptos watch",
    "dev:worker": "wrangler pages dev site",
    "deploy": "npm run build:worker && wrangler pages deploy site",
    "test": "cargo test"
  },
  "dependencies": {
    "wrangler": "^4.25.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.17"
  }
}
