# Cloudflare Headers for Performance Optimization

# WASM files - Enable compression and long-term caching
/pkg/*.wasm
  Content-Encoding: gzip
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/wasm
  Access-Control-Allow-Origin: *
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin

# JavaScript files - Enable compression and caching
/pkg/*.js
  Content-Encoding: gzip
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript

# CSS files - Enable compression and caching
/pkg/*.css
  Content-Encoding: gzip
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css


# HTML files - Short cache for dynamic content
/*.html
  Cache-Control: public, max-age=300
  Content-Type: text/html; charset=utf-8

# Root path - Short cache
/
  Cache-Control: public, max-age=300
  Content-Type: text/html; charset=utf-8

# Favicon and static assets
/favicon.ico
  Cache-Control: public, max-age=86400
  Content-Type: image/x-icon

# Font files (if any)
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff2
  Cross-Origin-Resource-Policy: cross-origin

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff
  Cross-Origin-Resource-Policy: cross-origin

# Security headers for all files
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
